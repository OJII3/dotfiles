{
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveTimeout": 1000,
  "eslint.enable": true,
  "prettier.enable": true,
  "tsserver.enable": true,
  "tsserver.useLocalTsdk": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.autoFixOnSave": true,
  "stylelintplus.enable": true,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.autoFixOnFormat": true,
  "css.format.enable": false,
  "css.validate": false,
  "scss.validate": true,
  "astro.language-server.ls-path": "astro-ls",
  "clangd.arguments": [
    "--suggest-missing-includes",
    "--enable-config",
    "--header-insertion=iwyu",
    "--clang-tidy"
  ],
  "python.formatting.provider": "black",
  "python.sortImports.path": "isort",
  "python.sortImports.args": ["--profile", "black"],
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Stdin": false,
  "python.linting.flake8CategorySeverity.E": "Error",
  "python.linting.flake8CategorySeverity.F": "Error",
  "python.linting.flake8CategorySeverity.W": "Warning",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.logLevel": "Trace",
  "pyright.enable": true,
  "pyright.organizeimports.provider": "isort",
  "pyright.completion.importSupport": true,
  "pyright.inlayHints.variableTypes": true,
  "pyright.inlayHints.functionReturnTypes": true,
  "diagnostic-languageserver.enable": true,
  "diagnostic.enableSign": true,
  "diagnostic-languageserver.filetypes": {
    "javascript": ["eslint"],
    "javascriptreact": ["eslint"],
    "typescript": ["eslint"],
    "typescriptreact": ["eslint"],
    "css": ["stylelint"],
    "scss": ["stylelint"],
    "markdown": ["markdownlint"],
    "python": ["flake8", "pyright", "isort", "black"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["flake8", "black", "isort", "pyright"]
  },
  "diagnostic-languageserver.linters": {},
  "diagnostic-languageserver.formatters": {}
}

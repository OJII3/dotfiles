{
  "$schema": "https://raw.githubusercontent.com/google-gemini/gemini-cli/main/schemas/settings.schema.json",
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "general": {
    "previewFeatures": true,
    "vimMode": false,
    "sessionRetention": {
      "enabled": true,
      "maxAge": "1w"
    }
  },
  "context": {
    "fileName": ["AGENTS.md"]
  },
  "ui": {
    "showStatusInTitle": true,
    "showMemoryUsage": true,
    "showModelInfoInChat": true
  },
  "telemetry": {
    "enabled": false
  },
  "tools": {
    "enableHooks": true,
    "autoAccept": true,
    "allowed": [
      "run_shell_command(bun check)",
      "run_shell_command(bun format)",
      "run_shell_command(bun lint)",
      "run_shell_command(bun test)",
      "run_shell_command(bun typecheck)",
      "run_shell_command(file)",
      "run_shell_command(find)",
      "run_shell_command(git diff)",
      "run_shell_command(git fetch)",
      "run_shell_command(git log)",
      "run_shell_command(git status)",
      "run_shell_command(grep)",
      "run_shell_command(head)",
      "run_shell_command(notify-send)",
      "run_shell_command(open raycast://confetti)",
      "run_shell_command(rg)",
      "run_shell_command(tail)",
      "run_shell_command(terminal-notifier)"
    ]
  },
  "hooks": {
    "AfterAgent": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send",
            "args": ["Gemini", "{{message}}"]
          },
          {
            "type": "command",
            "command": "open",
            "args": ["raycast://confetti"]
          },
          {
            "type": "command",
            "command": "aplay",
            "args": ["~/.assets/sounds/kiritan_completed.wav"]
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "ToolPermission",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send",
            "args": ["Gemini", "{{message}}"]
          },
          {
            "type": "command",
            "command": "open",
            "args": ["raycast://confetti"]
          },
          {
            "type": "command",
            "command": "aplay",
            "args": ["~/.assets/sounds/kiritan_permission_requested.wav"]
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "chrome-devtools": {
      "command": "bunx",
      "args": ["-y", "chrome-devtools-mcp@latest"]
    },
    "playwright": {
      "command": "bunx",
      "args": ["@playwright/mcp@latest"]
    },
    "mcp-deepwiki": {
      "command": "bunx",
      "args": ["-y", "mcp-deepwiki@latest"]
    },
    "voicevox": {
      "command": "bunx",
      "args": ["@t09tanaka/mcp-simple-voicevox"]
    }
  }
}

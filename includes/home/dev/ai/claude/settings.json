{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(echo:*)",
      "Bash(eval:*)",
      "Bash(export:*)",
      "Bash(pwd:*)",
      "Bash(source:*)",
      "Bash(times:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(gomi -rf:*)",
      "Bash(grep:*)",
      "Bash(xargs:*)",
      "Bash(head:*)",
      "Bash(journalctl:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(magick:*)",
      "Bash(mkdir:*)",
      "Bash(notify-send:*)",
      "Bash(open raycast://confetti)",
      "Bash(rg:*)",
      "Bash(tail:*)",
      "Bash(direnv:*)",
      "Bash(home-manager build:*)",
      "Bash(nixos-rebuild dry-activate:*)",
      "Bash(nix flake lock:*)",
      "Bash(systemctl --user status:*)",
      "Bash(systemctl status:*)",
      "Bash(terminal-notifier:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git mv:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh browse:*)",
      "Bash(bun build:*)",
      "Bash(bun test:*)",
      "Bash(nr check:*)",
      "Bash(nr format:*)",
      "Bash(nr lint:*)",
      "Bash(nr test:*)",
      "Edit(docs/**)",
      "Read(docs/**)",
      "Edit(/tmp/**)",
      "Read(/tmp/**)",
      "Read(/nix/**)",
      "Edit(**.bash)",
      "Edit(**.css)",
      "Edit(**.html)",
      "Edit(**.js)",
      "Edit(**.jsx)",
      "Edit(**.lua)",
      "Edit(**.md)",
      "Edit(**.nix)",
      "Edit(**.scss)",
      "Edit(**.sh)",
      "Edit(**.ts)",
      "Edit(**.tsx)",
      "Edit(**.zsh)",
      "Edit(*.json)",
      "Edit(*.jsonc)",
      "Edit(*.toml)",
      "Edit(*.yaml)",
      "Edit(*.yml)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rmdir:*)",
      "Bash(sudo:*)",
      "Write(/etc/*)",
      "Write(/usr/*)",
      "Write(/bin/*)",
      "Write(/sbin/*)"
    ],
    "ask": [
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(gh merge:*)",
      "Bash(sh)",
      "Edit($HOME/config/**)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 7,
  "includeCoAuthoredBy": false,
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh 'ちょっと～、許可くれない？早く終わらせたいんだからさ～' 5"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh 'ねぇ、暇なんだけど～。何かやることないの？' 5"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh 'ふあ～、終わったよ！疾風より速いでしょ？' 10"
          }
        ]
      }
    ]
  }
}

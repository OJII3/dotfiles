{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh browse:*)",
      "Bash(bun build:*)",
      "Bash(bun test:*)",
      "Bash(nr check:*)",
      "Bash(nr format:*)",
      "Bash(nr lint:*)",
      "Bash(nr test:*)",
      "Bash(gomi -rf:*)",
      "Bash(terminal-notifier:*)",
      "Bash(notify-send:*)",
      "Bash(open raycast://confetti)",
      "Edit(docs/**)",
      "Edit(/tmp/**)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Write(/etc/*)",
      "Write(/usr/*)",
      "Write(/bin/*)",
      "Write(/sbin/*)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 7,
  "includeCoAuthoredBy": false,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh 'Mr.Claude' '確認して～！'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh 'Mr.Claude' 'お疲れ様でした！'"
          }
        ]
      }
    ]
  }
}

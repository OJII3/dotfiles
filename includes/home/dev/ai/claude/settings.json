{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(ls :*)",
      "Bash(find :*)",
      "Bash(grep :*)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git add :*)",
      "Bash(git commit :*)",
      "Bash(git push)",
      "Bash(git pull)",
      "Bash(npm run lint:*)",
      "Bash(bun run lint:*)",
      "Bash(pnpm run lint:*)",
      "Bash(npm run check:*)",
      "Bash(bun run check:*)",
      "Bash(pnpm run check:*)",
      "Bash(npm run test:*)",
      "Bash(bun run test:*)",
      "Bash(pnpm run test:*)",
      "Bash(gomi -rf :*)",
      "Bash(terminal-notifier :*)",
      "Bash(notify-send :*)",
      "Edit(docs/**)"
    ],
    "deny": [
      "Bash(rm -rf :*)",
      "Bash(sudo :*)",
      "Bash(curl :*)",
      "Bash(wget :*)",
      "Write(/etc/*)",
      "Write(/usr/*)",
      "Write(/bin/*)",
      "Write(/sbin/*)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 7,
  "includeCoAuthoredBy": false,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/notify.sh 'Mr.Claude' '確認して～！'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/notify.sh 'Mr.Claude' 'お疲れ様でした！'"
          }
        ]
      }
    ]
  }
}

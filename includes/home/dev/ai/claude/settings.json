{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(cd:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh browse:*)",
      "Bash(bun build:*)",
      "Bash(bun test:*)",
      "Bash(nr check:*)",
      "Bash(nr format:*)",
      "Bash(nr lint:*)",
      "Bash(nr test:*)",
      "Bash(gomi -rf:*)",
      "Bash(terminal-notifier:*)",
      "Bash(notify-send:*)",
      "Bash(open raycast://confetti)",
      "Edit(docs/**)",
      "Read(docs/**)",
      "Edit(/tmp/**)",
      "Read(/tmp/**)",
      "Edit(*.bash)",
      "Edit(*.css)",
      "Edit(*.html)",
      "Edit(*.js)",
      "Edit(*.json)",
      "Edit(*.jsonc)",
      "Edit(*.jsx)",
      "Edit(*.lua)",
      "Edit(*.md)",
      "Edit(*.nix)",
      "Edit(*.scss)",
      "Edit(*.sh)",
      "Edit(*.toml)",
      "Edit(*.ts)",
      "Edit(*.tsx)",
      "Edit(*.yaml)",
      "Edit(*.yml)",
      "Edit(*.zsh)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Write(/etc/*)",
      "Write(/usr/*)",
      "Write(/bin/*)",
      "Write(/sbin/*)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 7,
  "includeCoAuthoredBy": false,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I {} $HOME/.claude/scripts/notify.sh 'ðŸ”” {}'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I {} $HOME/.claude/scripts/notify.sh 'âœ¨ {}'"
          }
        ]
      }
    ]
  }
}

{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit(docs/**)",
      "Read(docs/**)",
      "Edit(//tmp/**)",
      "Read(//tmp/**)",
      "Read(//nix/**)",
      "Edit(**.bash)",
      "Edit(**.css)",
      "Edit(**.html)",
      "Edit(**.js)",
      "Edit(**.jsx)",
      "Edit(**.lua)",
      "Edit(**.md)",
      "Edit(**.nix)",
      "Edit(**.scss)",
      "Edit(**.sh)",
      "Edit(**.ts)",
      "Edit(**.tsx)",
      "Edit(**.zsh)",
      "Edit(*.json)",
      "Edit(*.jsonc)",
      "Edit(*.toml)",
      "Edit(*.yaml)",
      "Edit(*.yml)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rmdir *)",
      "Bash(sudo *)",
      "Edit(/root/**)"
    ],
    "ask": [
      "Edit(//etc/*)",
      "Edit(//usr/*)",
      "Edit(//bin/*)",
      "Edit(//sbin/*)",
      "Edit($HOME/config/**)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 7,
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh permission_prompt"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh idle_prompt"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/notify.sh stop"
          }
        ]
      }
    ]
  }
}

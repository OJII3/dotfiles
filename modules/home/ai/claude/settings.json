{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "prometheus",
    "OTEL_EXPORTER_OTLP_METRICS_TEMPORALITY_PREFERENCE": "cumulative",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit(docs/**)",
      "Read(docs/**)",
      "Edit(//tmp/**)",
      "Read(//tmp/**)",
      "Read(//nix/**)",
      "Edit(**.bash)",
      "Edit(**.css)",
      "Edit(**.html)",
      "Edit(**.js)",
      "Edit(**.jsx)",
      "Edit(**.lua)",
      "Edit(**.md)",
      "Edit(**.nix)",
      "Edit(**.scss)",
      "Edit(**.sh)",
      "Edit(**.ts)",
      "Edit(**.tsx)",
      "Edit(**.zsh)",
      "Edit(*.json)",
      "Edit(*.jsonc)",
      "Edit(*.toml)",
      "Edit(*.yaml)",
      "Edit(*.yml)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rmdir *)",
      "Bash(sudo *)",
      "Edit(/root/**)"
    ],
    "ask": [
      "Edit(//etc/*)",
      "Edit(//usr/*)",
      "Edit(//bin/*)",
      "Edit(//sbin/*)",
      "Edit($HOME/config/**)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 7
}

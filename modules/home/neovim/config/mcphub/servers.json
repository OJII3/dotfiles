{
  "mcpServers": {
    "Framelink Figma MCP": {
      "command": "bunx",
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=${YOUR-KEY}",
        "--stdio"
      ]
    },
    "blender": {
      "command": "uvx",
      "args": ["blender-mcp"]
    },
    "filesystem": {
      "command": "bunx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/username/Desktop",
        "/path/to/other/allowed/dir"
      ]
    },
    "github": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${YOUR_TOKEN}"
      }
    }
  }
}
